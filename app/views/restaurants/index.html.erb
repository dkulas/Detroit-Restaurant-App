<br><br><br>
<h1 id="the-list-page-h1">the List</h1>
<%= search_form_for @q do |f| %>
	<%= f.search_field :name_cont, placeholder: "name"  %>
	<%= f.submit ">", :class => "rest-search" %>
	<br>
	<%= f.search_field :style_cont, placeholder: "style"  %>
	<%= f.submit ">", :class => "rest-search" %>
	<br>
	<%= link_to "reset search", "/restaurants", :class => "reset-search" %>
<% end %>

<br><br><div id="rest_list">
	<% @restaurants.each do |rest| %>
	<ul>
		<li class="listed-restaurant rest-name"><%= rest.name %></li><br>
		<li class="listed-restaurant"><%= rest.address %></li><br>
		<li class="listed-restaurant"><%= rest.city %>, <%= rest.state %></li><br>
		<li class="listed-restaurant"><%= rest.zipcode %></li><br>
		<li class="listed-restaurant"><a href="tel:"><%= rest.number %></a></li><br>
		<li class="listed-restaurant"><%= rest.style %></li><br>
		<li class="listed-restaurant"><%= link_to "website", rest.site, :target => "_blank" %></li>
		<li class="clear-fix listed-restaurant"></li>
	</ul>
	<% end %>
</div>