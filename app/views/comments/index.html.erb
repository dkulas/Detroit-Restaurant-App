<br><br><br>
<h1 id="the-comments-page-h1">the Comments</h1>

<%= search_form_for @q do |f| %>
	<%= f.search_field :title_cont, :placeholder => "establishment name" %>
	<%= f.submit "search" %>
	<%= link_to "reset", "/comments" %>
<% end %>

<div id="comment_form">
	<ul>
	<%= form_for @comments do |f| %>

	<br><br><br>
	<li>
		<h3>
			<%= f.text_field :title, placeholder: "establishment name" %>
		</h3>
	</li>
	<li>
		<h3>
			<%= f.text_field :author, placeholder: "name/twitter handle" %>
		</h3>
	</li>
	<br><br><li>
		<h3>
			<%= f.text_area :body %>
		</h3>
	</li>
	<br><br><li>
		<h4>
			<%= f.submit "add comment" %>
		</h4><br>
	</li>
<% end %>
	</ul>
</div>

<br><div id="comments_container">
	<ul>
		<% @comments_all.each do |comment| %>
		<li id="comments_bar_name" style="font-weight: bolder;"><%= comment.title %></li><br>
		<li>author:</li>
		<li><%= comment.author %></li><br>
		<li>comment:</li>
		<li><%= comment.body %></li><br>
		<li>date:</li>
		<li><%= comment.created_at %></li><br>
		<% end %>
	</ul>
</div>




