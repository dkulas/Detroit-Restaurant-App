<br><br><br><h2>comments: by the people, for the people</h2>	

<%= form_for @comments do |f| %>

<br><br><br><div class="new-comment-container">
	<h3>
		<%= f.label :title %><br><br>
		<%= f.text_field :title, placeholder: "rest/bar name" %><br><br>
	</h3>

	<h3>
		<%= f.label :author %><br><br>
		<%= f.text_field :author, placeholder: "name/twitter handle" %><br><br>
	</h3>

	<h3>
		<%= f.label :body %><br><br>
		<%= f.text_area :body %><br><br>
	</h3>

	<h4>
		<%= f.submit "add comment" %>
	</h4>
<% end %>
	<div id="comments_container">
		<ul>
			<% @comments_all.each do |comment| %>
			<li><h3>rest/bar name</h3></li>
			<li><%= comment.title %></li><br>
			<li><h3>author</h3></li>
			<li><%= comment.author %></li><br>
			<li><h3>comment</h3></li>
			<li><%= comment.body %></li><br><br><br>
			<% end %>
		</ul>
	</div>
</div>




